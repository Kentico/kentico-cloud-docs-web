- var isNotHome = req.originalUrl.replace(/\?.*$/, '') !== '/'
.print-only
    img.logo(src='/img/kc-logo.png', alt='Kentico Cloud logo')
nav.navigation
    .navigation__wrapper
        .navigation__left
            a.navigation__logo(href='https://kenticocloud.com/', rel='noreferrer')
                img(src='/img/kc-logo.svg', alt='Kentico Cloud logo')
            a.navigation__title(href='/') Docs
            ul(class= `navigation__list${isNotHome ? '' : ' navigation__list--full'}`)
                each item in navigation
                    li.navigation__item
                        a(href=`${item.system.type === 'navigation_link' ? '' : '/'}${item.url.value}`, class=`navigation__link${req.originalUrl.startsWith(`/${item.url.value}`) ? ' navigation__link--active' : ''}`, target=`${item.system.type === 'navigation_link' ? '_blank' : '_self'}`) !{item.title.value}
        .navigation__right(data-toggle-target='search')
            if isNotHome
                .navigation__search-wrapper
                    form.navigation__search
                        .navigation__search-icon(aria-hidden='true')
                        label.sr-only(for='nav-search') !{UIMessages ? UIMessages.search___placeholder.value : ''}
                        input(type='search', id='nav-search', name='nav-search', autocomplete="off", placeholder= UIMessages ? UIMessages.search___placeholder.value : '')
                    #searchbox
            a.navigation__app(href='https://app.kenticocloud.com', target='_blank', rel='noreferrer')
                i.icon-kentico
                .navigation__app-tooltip !{UIMessages ? UIMessages.link_to_app_tooltip.value : ''}
        if isNotHome
            .navigation__trigger(data-toggle-trigger='search', aria-hidden='true')

.print-only
    img.logo(src='/img/kc-logo.png', alt='Kentico Cloud logo')
nav.navigation
    .navigation__wrapper
        .navigation__left
            a.navigation__logo(href='/')
                img(src='/img/kc-logo.svg', alt='Kentico Cloud logo')
            ul.navigation__list
                li.navigation__item
                    a(href=`/article`, class=`navigation__link${req.originalUrl === '/article' ? ' navigation__link--active' : ''}`) Tutorials
                li.navigation__item
                    a.navigation__link(href=`#`) API Reference
        if(req.originalUrl !== '/')
            .navigation__right(data-toggle-target='search')
                form.navigation__search
                    .navigation__search-icon(aria-hidden='true')
                    label.sr-only(for='nav-search') Search for guides, how to's and more
                    input(type='search', id='nav-search', name='nav-search', autocomplete="off", placeholder='Search for guides, how to\'s and more')
                #searchbox
            .navigation__trigger(data-toggle-trigger='search', aria-hidden='true')

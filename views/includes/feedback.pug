mixin error(errors, field)
    if (typeof errors !== 'undefined' && errors.length)
        each err in errors
            if (err.param === field)
                .form__error !{err.msg}
mixin input(type, id, label)
    .form__row
        if label
            label.form__label(for=id) #{label}
        input.form__input(id=id, name=id, type=type, value=getFormValue(req.body, id), required='required')
        +error(req.errorForm, id)
mixin textarea(id, label)
    .form__row
        if label
            label.form__label(for=id) #{label}
        textarea.form__input.form__input--textarea(id=id, name=id, required='required') !{getFormValue(req.body, id)}
        +error(req.errorForm, id)
if UIMessages
    .feedback
        h2.feedback__heading !{UIMessages.feedback_form___heading.value}
        .feedback__answer
            a.feedback__button.feedback__button--yes(href='#yesMsg') !{UIMessages.feedback_form___yes_button.value}
            a.feedback__button.feedback__button--no(href='#noMsg') !{UIMessages.feedback_form___no_button.value}
        .feedback__response
            .feedback__message#yesMsg.feedback__message--yes !{UIMessages.feedback_form___yes_message.value}
            .feedback__message#noMsg.feedback__message--no !{UIMessages.feedback_form___no_message.value}
        form(action='/feedback', method='post').form.feedback__form.form
            +input('email', 'email', 'Email')
            +textarea('feedback', 'Feedback')
            .form__row
                button.form__button Submit

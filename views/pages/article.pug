extends ../includes/layout.pug
block content
    main(id='main')
        .article
            .article__left
                include ../includes/sub-navigation.pug
            .article__right
                .article__content
                    h1 !{content.title.value}
                    .article__notes
                        time.article__date(datetime= moment(content.system.lastModified).format('YYYY-MM-DD')) !{moment(content.system.lastModified).format('MMMM D, YYYY')}
                        .article__author 
                            if (content.author && content.author.length)
                                | !{content.author[0].name.value}
                            else
                                | !{UIMessages.article___no_author.value}
                        if isPreview 
                            a(href=`https://app.kenticocloud.com/goto/edit-item/project/${projectId}/variant-codename/default/item/${content.system.id}`, target='_blank', rel='noopener') Edit
                    if (platform && !availablePlatforms)
                        .language-selector
                            ul.language-selector__list
                                each item in platform
                                    li.language-selector__item
                                        a(href=`#`, data-platform=item.codename, class=`language-selector__link`) #{item.name}
                    if (availablePlatforms)
                        .language-selector
                            ul.language-selector__list.language-selector__list--static
                                each item in availablePlatforms
                                    li.language-selector__item
                                        - var path = req.path.split('/');var pathPlatform = path.pop();path = path.join('/');
                                        - var itemPlatform = item.platform.value[0].codename === '_net' ? 'dotnet' : item.platform.value[0].codename;
                                        a(href=`${path}/${itemPlatform}`, class=`language-selector__link${pathPlatform === itemPlatform ? ' language-selector__link--active' : ''}`) #{item.platform.value[0].name}
                    if (introduction !== '<p><br></p>')
                        | !{minify(introduction)}
                    include ../includes/table-of-contents.pug
                    | !{minify(content.content.value)}
                    if (nextSteps.value !== '<p><br></p>')
                        h2.table-of-contents__whatsnext !{UIMessages.article___next_steps.value}
                        | !{minify(nextSteps.value)}
                    include ../includes/feedback.pug
                    include ../includes/copy-tooltip.pug
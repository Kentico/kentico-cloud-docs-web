                        .platforms__title iOS
                li.platforms__item
                    a.platforms__link(href="#")
                        .platforms__img.platforms__img--php(aria-hidden='true')
                        .platforms__title PHP
                li.platforms__item
                    a.platforms__link(href="#")
                        .platforms__img.platforms__img--ssg(aria-hidden='true')
                        .platforms__title Gatsby / SSG

                li.platforms__item
                    a.platforms__link(href="#")
                        .platforms__img.platforms__img--java(aria-hidden='true')
                        .platforms__title Java
        section.presentation__section
            h2.presentation__heading Setup projects
            ul.selection

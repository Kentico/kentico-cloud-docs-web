extends ../includes/layout.pug
block content
    .hero
        .hero__wrapper
            .hero__left
                h1.hero__heading !{title}
                form.hero__search
                    .hero__search-icon(aria-hidden='true')
                    label.sr-only(for='nav-search') Search for guides, how to's and more
                    input(type='search', id='nav-search', name='nav-search', autocomplete="off", placeholder='Search for guides, how to\'s and more')
                #searchbox
                a.hero__note-link(href="#") What is headless CMS?
            .hero__right
                .hero__screen
    main(id='main').presentation
        section.presentation__section
            h2.presentation__heading Develop apps
            h3.presentation__sub-heading Choose your platform
            ul.platforms
                li.platforms__item
                    a.platforms__link(href="#")
                        .platforms__img.platforms__img--js(aria-hidden='true')
                        .platforms__title Javascript
                li.platforms__item
                    a.platforms__link(href="#")
                        .platforms__img.platforms__img--net(aria-hidden='true')
